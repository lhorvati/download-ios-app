/* DOWNLOAD.STYL ======================================= */


.download
    width: 100%
    height: 100%
    flexbox()
    flex-center()
    margin: 0 auto
    background: #463e3e

    .container
        width: 80%
        height: 100%
        flexbox()
        flex-flow: column nowrap
        position: relative
        margin: 0 auto

    .download__row
        width: 100%
        flexbox()
        flex-center()

        &:last-child
            margin-top: auto
            overflow: hidden
            display: block

    .download__logo
        width: 100%
        flexbox()
        flex-center()
        align-self: flex-end
        margin-top: 30px

        img
            max-width: 250px

    .download__text
        flexbox()
        flex-flow: column nowrap
        flex-center()
        font-family: font1
        font-size: 16px
        font-weight: 400
        color: #d6cbcb
        text-align: center
        box-sizing()
        padding: 40px 0

        p
            font-size: 16px
            line-height: normal

        a
            margin-top: 20px
            color: #bca0cc
            font-size: 14px

    .download__button
        margin-bottom: 20px

        a
            display: block

            img
                width: 180px

    .download__image
        position: relative
        width: 100%
        align-self: flex-end
